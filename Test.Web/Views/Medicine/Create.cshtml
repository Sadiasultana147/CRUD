@model MedicineCreateModel

<div class="container-fluid">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Create Medicine</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form role="form" asp-antiforgery="true" asp-action="Create"
                      asp-area="" asp-controller="Medicine" method="post">
                    <div class="card-body">
                        
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="MedicineName"></label>
                            <input type="text" class="form-control" asp-for="MedicineName" placeholder="Enter title">
                            <span asp-validation-for="MedicineName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Price"></label>
                            <input type="text" class="form-control" asp-for="Price" placeholder="Enter fees">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Quantity"></label>
                            <input type="text" class="form-control" asp-for="Quantity" placeholder="Enter fees">
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Category"></label>
                            <input type="text" class="form-control" asp-for="Category" placeholder="Enter fees">
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
            <!-- /.card -->

        </div>
        <!--/.col (left) -->
    </div>
    <!-- /.row -->
</div><!-- /.container-fluid -->